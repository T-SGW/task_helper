<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.t_sgw.task_helper.controller.MainController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20;">
            <Label text="TaskHelper" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #007bff;">
                <padding>
                    <Insets bottom="20"/>
                </padding>
            </Label>
            
            <Button fx:id="homeButton" text="ホーム" style="-fx-background-color: transparent; -fx-text-fill: #007bff; -fx-font-weight: bold; -fx-alignment: center-left;" onAction="#showHome"/>
            <Button fx:id="tasksButton" text="タスク一覧" style="-fx-background-color: transparent; -fx-text-fill: #495057; -fx-alignment: center-left;" onAction="#showTasks"/>
            <Button fx:id="newTaskButton" text="タスク作成" style="-fx-background-color: transparent; -fx-text-fill: #495057; -fx-alignment: center-left;" onAction="#showNewTask"/>
            <Button fx:id="notificationsButton" text="通知" style="-fx-background-color: transparent; -fx-text-fill: #495057; -fx-alignment: center-left;" onAction="#showNotifications"/>
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentPane">
            <!-- コンテンツはコントローラーで動的に切り替え -->
        </StackPane>
    </center>
</BorderPane>
